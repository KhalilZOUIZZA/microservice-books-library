<!-- db/changelog-1.1-container.xml -->

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.0.xsd">

  <!-- Create Container Table -->
    <changeSet id="1" author="your-name">
    <createTable tableName="book">
      <column name="id" type="BIGINT">
        <constraints primaryKey="true" nullable="false"/>
      </column>
        <column name="code" type="VARCHAR(500)"/>
        <column name="label" type="VARCHAR(500)"/>
        <column name="title" type="VARCHAR(500)"/>
        <column name="edition_date" type="TIMESTAMP"/>
        <column name="description" type="VARCHAR(500)"/>
        <column name="number_of_copies" type="BIGINT"/>
        <column name="available" type="TINYINT"/>
        <column name="image_url" type="VARCHAR(500)"/>

        <column name="category_id" type="BIGINT">
          <constraints nullable="false"/>
        </column>
        <column name="author_id" type="BIGINT">
          <constraints nullable="false"/>
        </column>

    </createTable>
  </changeSet>

    <!-- Add foreign key constraint -->
  <changeSet id="2" author="your-name">
      <addForeignKeyConstraint
              baseTableName="book"
              baseColumnNames="category_id"
              referencedTableName="category"
              referencedColumnNames="id"
              constraintName="fk_book_category"/>
      <addForeignKeyConstraint
              baseTableName="book"
              baseColumnNames="author_id"
              referencedTableName="author"
              referencedColumnNames="id"
              constraintName="fk_book_author"/>

  </changeSet>

    <!-- Create Sequence for ContainerType -->
  <changeSet id="3" author="your-name">
    <createSequence sequenceName="book_seq" startValue="1" incrementBy="1"/>
  </changeSet>

  <!-- Load Data from CSV -->
  <changeSet id="4" author="your-name">
    <loadData
            file="classpath:/db/migration/data/book/Book.csv"
            tableName="book">
      <column name="id" type="NUMERIC"/>
          <column name="code" type="STRING"/>
          <column name="label" type="STRING"/>
          <column name="title" type="STRING"/>
          <column name="edition_date" type="TIMESTAMP"/>
          <column name="description" type="STRING"/>
          <column name="number_of_copies" type="NUMERIC"/>
          <column name="available" type="BOOLEAN"/>
          <column name="image_url" type="STRING"/>
        <column name="category" type="BIGINT"/>
        <column name="author" type="BIGINT"/>
    </loadData>
  </changeSet>


</databaseChangeLog>
