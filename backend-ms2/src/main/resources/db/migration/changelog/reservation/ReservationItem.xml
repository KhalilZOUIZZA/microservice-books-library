<!-- db/changelog-1.1-container.xml -->

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.0.xsd">

  <!-- Create Container Table -->
    <changeSet id="1" author="your-name">
    <createTable tableName="reservation_item">
      <column name="id" type="BIGINT">
        <constraints primaryKey="true" nullable="false"/>
      </column>
        <column name="return_date" type="TIMESTAMP"/>

        <column name="copy_id" type="BIGINT">
          <constraints nullable="false"/>
        </column>
        <column name="reservation_id" type="BIGINT">
          <constraints nullable="false"/>
        </column>

    </createTable>
  </changeSet>

    <!-- Add foreign key constraint -->
  <changeSet id="2" author="your-name">
      <addForeignKeyConstraint
              baseTableName="reservation_item"
              baseColumnNames="copy_id"
              referencedTableName="copy"
              referencedColumnNames="id"
              constraintName="fk_reservation_item_copy"/>
      <addForeignKeyConstraint
              baseTableName="reservation_item"
              baseColumnNames="reservation_id"
              referencedTableName="reservation"
              referencedColumnNames="id"
              constraintName="fk_reservation_item_reservation"/>

  </changeSet>

    <!-- Create Sequence for ContainerType -->
  <changeSet id="3" author="your-name">
    <createSequence sequenceName="reservation_item_seq" startValue="1" incrementBy="1"/>
  </changeSet>

  <!-- Load Data from CSV -->
  <changeSet id="4" author="your-name">
    <loadData
            file="classpath:/db/migration/data/reservation/ReservationItem.csv"
            tableName="reservation_item">
      <column name="id" type="NUMERIC"/>
          <column name="return_date" type="TIMESTAMP"/>
        <column name="copy" type="BIGINT"/>
        <column name="reservation" type="BIGINT"/>
    </loadData>
  </changeSet>


</databaseChangeLog>
